              sequence="3"/>

    <menuitem id="menu_sub_labour"
              name="Labour"
              parent="menu_materials"
              action="action_view_labour"
              sequence="4"/>

    <menuitem id="menu_sub_contract"
              name="Sub Contract Request"
              parent="menu_materials"
