        <field name="domain">[('product_type_id','=','equipment')]</field>
        <field name="context">{'default_product_type_id' : 'equipment'}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new product.
            </p>
        </field>
    </record>

